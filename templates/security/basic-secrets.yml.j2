# Basic Security Configuration for {{ project_name }}
# Environment: {{ env | default('production') }}

apiVersion: v1
kind: Secret
metadata:
  name: {{ project_name }}-secrets
  namespace: {{ project_name }}-{{ env | default('production') }}
type: Opaque
data:
  # Base64 encoded secrets
  # Database credentials
  database-url: cG9zdGdyZXNxbDovL3VzZXI6cGFzc3dvcmRAZGI6NTQzMi9kYXRhYmFzZQ==
  database-username: dXNlcg==
  database-password: cGFzc3dvcmQ=
  
  # JWT secret
  jwt-secret: eW91ci1qd3Qtc2VjcmV0LWhlcmU=
  
  # API keys
  api-key: eW91ci1hcGkta2V5LWhlcmU=
  secret-key: eW91ci1zZWNyZXQta2V5LWhlcmU=

---
# ConfigMap for non-sensitive configuration
apiVersion: v1
kind: ConfigMap
metadata:
  name: {{ project_name }}-config
  namespace: {{ project_name }}-{{ env | default('production') }}
data:
  config.yaml: |
    app:
      name: "{{ project_name }}"
      environment: "{{ env | default('production') }}"
      debug: false
      log_level: "INFO"
    
    security:
      password_min_length: 8
      session_timeout: 3600
      max_login_attempts: 5
    
    cors:
      allowed_origins:
        - "https://{{ project_name }}.com"
      allowed_methods:
        - "GET"
        - "POST"
        - "PUT"
        - "DELETE"
      allowed_headers:
        - "Content-Type"
        - "Authorization"
