# Comprehensive security configuration
apiVersion: v1
kind: ConfigMap
metadata:
  name: {{ project_name }}-security-config
  namespace: {{ project_name }}-{{ env | default('production') }}
data:
  security.yaml: |
    authentication:
      jwt:
        algorithm: "HS384"
        token_expiry: "30m"
        refresh_token_expiry: "24h"
        issuer: "{{ project_name }}"
        audience: "{{ project_name }}-users"
      
      mfa:
        enabled: true
        required_for_admin: true
        required_for_sensitive_ops: true
        totp_window: 1
        backup_codes_count: 10
      
      oauth:
        providers:
          - name: "google"
            client_id: "google-client-id"
            scope: "openid email profile"
            mfa_required: true
          - name: "github"
            client_id: "github-client-id"
            scope: "user:email"
            mfa_required: true
          - name: "azure-ad"
            tenant_id: "azure-tenant-id"
            scope: "openid email profile"
      
      certificate_auth:
        enabled: true
        ca_cert_path: "/etc/ssl/certs/ca-cert.pem"
        client_cert_required: true
    
    authorization:
      rbac:
        enabled: true
        default_role: "none"
        roles:
          - name: "super_admin"
            permissions: ["*"]
            mfa_required: true
          - name: "admin"
            permissions: ["read", "write", "delete", "manage_users"]
            mfa_required: true
          - name: "editor"
            permissions: ["read", "write"]
            mfa_required: false
          - name: "viewer"
            permissions: ["read"]
            mfa_required: false
      
      abac:
        enabled: true
        policies:
          - effect: "allow"
            actions: ["read"]
            resources: ["public_data"]
          - effect: "deny"
            actions: ["delete"]
            resources: ["sensitive_data"]
            conditions:
              - field: "user.role"
                operator: "ne"
                value: "admin"
      
      rate_limiting:
        enabled: true
        requests_per_minute: 60
        burst_size: 10
        per_ip: true
        per_user: true
        penalty_threshold: 100
        penalty_duration: "1h"
    
    encryption:
      at_rest:
        algorithm: "AES-256-GCM"
        key_rotation_days: 30
        hsm_enabled: true
        key_derivation: "PBKDF2"
      
      in_transit:
        tls_version: "1.3"
        cipher_suites:
          - "TLS_AES_256_GCM_SHA384"
          - "TLS_CHACHA20_POLY1305_SHA256"
        perfect_forward_secrecy: true
        certificate_pinning: true
      
      field_level:
        enabled: true
        fields:
          - "ssn"
          - "credit_card"
          - "medical_record"
          - "personal_email"
    
    session:
      secure: true
      http_only: true
      same_site: "strict"
      max_age: 1800
      rotation_interval: 900
    
    password_policy:
      min_length: 16
      require_uppercase: true
      require_lowercase: true
      require_numbers: true
      require_special_chars: true
      forbidden_patterns:
        - "password"
        - "123456"
        - "qwerty"
      max_age_days: 60
      history_count: 12
      lockout_threshold: 5
      lockout_duration: "15m"
    
    audit:
      enabled: true
      log_all_requests: true
      log_failed_attempts: true
      log_successful_logins: true
      log_data_access: true
      log_admin_actions: true
      retention_days: 2555  # 7 years
      immutable_logs: true
      log_encryption: true
    
    compliance:
      standards:
        - "SOC2"
        - "ISO27001"
        - "GDPR"
        - "HIPAA"
      
      data_classification:
        - level: "public"
          retention_days: 365
          encryption_required: false
        - level: "internal"
          retention_days: 1095
          encryption_required: true
        - level: "confidential"
          retention_days: 2555
          encryption_required: true
          access_log_required: true
        - level: "restricted"
          retention_days: 3650
          encryption_required: true
          access_log_required: true
          mfa_required: true

---
# Strict NetworkPolicy
apiVersion: networking.k8s.io/v1
kind: NetworkPolicy
metadata:
  name: {{ project_name }}-strict-network-policy
  namespace: {{ project_name }}-{{ env | default('production') }}
spec:
  podSelector:
    matchLabels:
      app: {{ project_name }}
  policyTypes:
  - Ingress
  - Egress
  ingress:
  - from:
    - namespaceSelector:
        matchLabels:
          name: {{ project_name }}-{{ env | default('production') }}
    - namespaceSelector:
        matchLabels:
          name: ingress-nginx
    - namespaceSelector:
        matchLabels:
          name: monitoring
    ports:
    - protocol: TCP
      port: 8000
  egress:
  - to:
    - namespaceSelector:
        matchLabels:
          name: {{ project_name }}-{{ env | default('production') }}
    - namespaceSelector:
        matchLabels:
          name: kube-system
    - namespaceSelector:
        matchLabels:
          name: monitoring
    ports:
    - protocol: TCP
      port: 53
    - protocol: UDP
      port: 53
  - to: []
    ports:
    - protocol: TCP
      port: 443
    - protocol: TCP
      port: 80
  - to:
    - ipBlock:
        cidr: 10.0.0.0/8
    ports:
    - protocol: TCP
      port: 5432
    - protocol: TCP
      port: 6379

---
# Resource quotas for security
apiVersion: v1
kind: ResourceQuota
metadata:
  name: {{ project_name }}-security-quota
  namespace: {{ project_name }}-{{ env | default('production') }}
spec:
  hard:
    requests.cpu: "2"
    requests.memory: 4Gi
    limits.cpu: "4"
    limits.memory: 8Gi
    persistentvolumeclaims: "2"
    pods: "10"
    services: "5"
    secrets: "10"
    configmaps: "10"

---
# Pod Security Standards
apiVersion: v1
kind: Pod
metadata:
  name: {{ project_name }}-security-example
  namespace: {{ project_name }}-{{ env | default('production') }}
spec:
  securityContext:
    runAsNonRoot: true
    runAsUser: 1000
    runAsGroup: 1000
    fsGroup: 1000
    seccompProfile:
      type: RuntimeDefault
  containers:
  - name: {{ project_name }}
    image: {{ project_name }}:latest
    securityContext:
      allowPrivilegeEscalation: false
      capabilities:
        drop:
        - ALL
      readOnlyRootFilesystem: true
      runAsNonRoot: true
      runAsUser: 1000
    volumeMounts:
    - name: tmp
      mountPath: /tmp
    - name: var-run
      mountPath: /var/run
    - name: var-cache
      mountPath: /var/cache
  volumes:
  - name: tmp
    emptyDir: {}
  - name: var-run
    emptyDir: {}
  - name: var-cache
    emptyDir: {}
