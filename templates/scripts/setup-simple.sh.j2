#!/bin/bash

# Setup Script for {{ project_name }}
# Generated by DevOps Project Generator

set -euo pipefail

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m' # No Color

# Configuration
PROJECT_NAME="{{ project_name }}"
ENVIRONMENT="{{ env | default('production') }}"
PYTHON_VERSION="3.9"

# Logging function
log() {
    echo -e "${GREEN}[$(date +'%Y-%m-%d %H:%M:%S')] $1${NC}"
}

error() {
    echo -e "${RED}[$(date +'%Y-%m-%d %H:%M:%S')] ERROR: $1${NC}"
    exit 1
}

warning() {
    echo -e "${YELLOW}[$(date +'%Y-%m-%d %H:%M:%S')] WARNING: $1${NC}"
}

info() {
    echo -e "${BLUE}[$(date +'%Y-%m-%d %H:%M:%S')] INFO: $1${NC}"
}

# Check prerequisites
check_prerequisites() {
    log "Checking prerequisites..."
    
    # Check Python
    if ! command -v python3 &> /dev/null; then
        error "Python 3 is required but not installed"
    fi
    
    {% if has_docker %}
    # Check Docker
    if ! command -v docker &> /dev/null; then
        error "Docker is required but not installed"
    fi
    
    if ! command -v docker-compose &> /dev/null; then
        error "Docker Compose is required but not installed"
    fi
    {% endif %}
    
    log "Prerequisites check passed"
}

# Setup Python environment
setup_python_env() {
    log "Setting up Python environment..."
    
    # Create virtual environment
    if [[ ! -d "venv" ]]; then
        python3 -m venv venv
        log "Virtual environment created"
    else
        log "Virtual environment already exists"
    fi
    
    # Activate virtual environment
    source venv/bin/activate
    
    # Upgrade pip
    pip install --upgrade pip
    
    # Install dependencies
    pip install -r app/sample-app/requirements.txt
    
    log "Python environment setup completed"
}

# Setup environment variables
setup_env_vars() {
    log "Setting up environment variables..."
    
    # Create .env file
    cat > .env << EOF
# Environment Configuration
ENV=${ENVIRONMENT}
DEBUG={% if env == 'development' %}true{% else %}false{% endif %}
PORT=8000
LOG_LEVEL={% if env == 'development' %}DEBUG{% elif env == 'staging' %}INFO{% else %}WARNING{% endif %}

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/${PROJECT_NAME}
REDIS_URL=redis://localhost:6379/0

# Security
JWT_SECRET=your-jwt-secret-here
SECRET_KEY=your-secret-key-here
API_KEY=your-api-key-here
EOF
    
    log "Environment variables configured"
}

# Create startup scripts
create_startup_scripts() {
    log "Creating startup scripts..."
    
    # Create start script
    cat > start.sh << 'EOF'
#!/bin/bash
# Start script for {{ project_name }}

set -euo pipefail

# Activate virtual environment
source venv/bin/activate

# Set environment variables
export $(cat .env | xargs)

# Start the application
{% if has_docker %}
docker-compose up -d
{% else %}
python app/sample-app/main.py
{% endif %}
EOF
    
    # Create stop script
    cat > stop.sh << 'EOF'
#!/bin/bash
# Stop script for {{ project_name }}

set -euo pipefail

{% if has_docker %}
docker-compose down
{% else %}
# Kill the application process
pkill -f "main.py"
{% endif %}
EOF
    
    # Make scripts executable
    chmod +x start.sh stop.sh
    
    log "Startup scripts created"
}

# Main setup function
main() {
    log "Starting setup for {{ project_name }}..."
    log "Environment: ${ENVIRONMENT}"
    
    check_prerequisites
    setup_python_env
    setup_env_vars
    create_startup_scripts
    
    log "Setup completed successfully!"
    log ""
    log "Next steps:"
    log "1. Review and update .env file with your actual credentials"
    log "2. Run './start.sh' to start the application"
    log "3. Access the application at http://localhost:8000"
    {% if has_health_checks %}
    log "4. Check health at http://localhost:8000/health"
    {% endif %}
    {% if has_metrics %}
    log "5. View metrics at http://localhost:9090/metrics"
    {% endif %}
    log ""
    log "For more information, see the README.md file"
}

# Run main function
main "$@"
